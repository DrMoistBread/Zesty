@inherits LayoutComponentBase

<div class="min-h-screen bg-pink-50 flex flex-col font-sans">
    <!-- Top Navbar -->
    <nav class="bg-purple-200 px-4 py-3 flex justify-between items-center shadow-sm">
        <span class="text-xl font-bold text-purple-800">MyApp</span>

        <!-- Desktop Nav -->
        <div class="flex space-x-6">
            <NavLink href="" class="text-purple-800 hover:text-purple-600">Home</NavLink>
            <NavLink href="menu" class="text-purple-800 hover:text-purple-600">Menu</NavLink>
            <NavLink href="table" class="text-purple-800 hover:text-purple-600">Table</NavLink>
        </div>

        <!-- Mobile Menu Button -->
        <button @onclick="ToggleMenu" class="md:hidden text-purple-800 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </nav>

    <!-- Mobile Menu -->
    @if (isMenuOpen)
    {
        <div class="bg-purple-100 md:hidden flex flex-col space-y-2 px-4 py-3 shadow-sm">
            <NavLink href="" class="text-purple-800 hover:text-purple-600">Home</NavLink>
            <NavLink href="menu" class="text-purple-800 hover:text-purple-600">Menu</NavLink>
            <NavLink href="table" class="text-purple-800 hover:text-purple-600">Table</NavLink>
        </div>
    }

    <!-- Main Content -->
    <main class="flex-1 p-6">
        <div class="bg-white rounded-lg shadow-sm border border-purple-100 p-6">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-emerald-200 px-4 py-3 text-center text-sm text-emerald-900 shadow-inner">
        © @DateTime.Now.Year - MyApp
    </footer>
</div>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }
}